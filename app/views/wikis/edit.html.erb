<div class="row">
  <div class="col-md-12">
    <h2>Edit Wiki</h2>
    <div class="well">
      <%= form_for @wiki, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <%= f.label :title, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :title, autofocus: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :body, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_area :body, autofocus: true, class: 'tinymce form-control fr-view', id: 'wysiwyg-editor' %>

          </div>
        </div>
        <% unless @user.standard? %>
          <div class="form-group">
            <%= f.label :private, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.check_box :private, class: 'form-control' %>
            </div>
          </div>
        <% end %>

        <div class="actions form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
