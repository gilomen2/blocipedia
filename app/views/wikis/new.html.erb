<div class="row">
  <div class="col-md-12">
    <h2>New Wiki</h2>
    <div class="well">
      <%= form_for @wiki, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <%= f.label :title, class: 'col-lg-1 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :title, autofocus: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :body, class: 'col-lg-1 control-label' %>
            <div class="col-lg-10">
              <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#editor" data-toggle="tab">Editor</a></li>
                <li role="presentation"><a href="#preview" data-toggle="tab">Preview</a></li>
              </ul>
              <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="editor">
                  <div id="markdown-editor">
                    <%= f.text_area :body, autofocus: true, class: 'form-control fr-view', id: 'wysiwyg-editor' %>
                  </div>
                </div>
                <div class="tab-pane fade" id="preview">
                  <div id="wysiwyg-preview"></div>
                </div>
              </div>
            </div>
        </div>
        <% unless @user.standard? %>
          <div class="form-group">
            <%= f.label :private, class: 'col-lg-1 control-label' %>
            <div class="col-lg-10">
              <%= f.check_box :private, class: 'form-control' %>
            </div>
          </div>
        <% end %>

        <div class="actions form-group">
          <div class="col-lg-10 col-lg-offset-1">
            <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
