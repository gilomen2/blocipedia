<div class="row">
  <div class="col-md-12">
    <h2>New Wiki</h2>
    <div class="well">
      <%= form_for @wiki, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <%= f.label :title, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :title, autofocus: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :body, class: 'col-lg-2 control-label'%>
          <div class="col-lg-10">
            <%= f.text_area :body, autofocus: true, class: 'form-control', id: 'summernote' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-2"></div>
          <div class="col-lg-10">
            <%= f.check_box :private %><%= f.label :private, class: 'control-label checkbox-label' %>
          </div>
        </div>

        <div class="actions form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
