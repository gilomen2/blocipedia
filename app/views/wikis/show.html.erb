<div class="col-md-8">
  <h1><%= @wiki.title %></h1>
  <p><em>Created by: <%= @wiki.user.name %></em></p>


  <p><%= markdown_to_html @wiki.body %></p>
</div>
<div class="col-md-4">
  <h3>Wiki Tools</h3>
  <% if policy(@wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-default' %>
  <% end %>
  <% if policy(@wiki).destroy? %>
    <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki?"} %>
  <% end %>
  <div class="collaborators">
   <h5>Collaborators</h5>
    <% if policy(@wiki).create_collaborator? %>
      <%= render partial: "collaborators/collaboratorform", :controller => "collaborators" %>
    <% end %>
    <% if @collaborators %>
      <% if policy(@wiki).view_collaborators? %>
        <table class="table table-hover">
          <tbody>
            <%= render partial: "collaborators/collaborator", collection: @collaborators %>
          </tbody>
        </table>
      <% end %>
    <% end %>
  </div>

</div>

